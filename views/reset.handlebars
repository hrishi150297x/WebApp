<section class="container-fluid main-content">
{{#if error}}
    <p>{{error}}</p>
{{/if}}

    <p>We have sent you an One Time Password (OTP)</p>
    <div class="col-sm-10" style="width: 600px; margin-left: 440px; margin-top: 100px;">
        <div class="jumbotron" style="background-color: #c8cac9;">
            <div class="form-group" style="margin-top: -50px;">
                <h1 style="margin-top: 10px; margin-left: 160px;">Enter OTP</h1>
            </div>
            
            <form method="POST" action="/users/update" class="form-horizontal" style="margin-left: 50px; margin-top: 20px;">        
                <div class="form-group input-group">
                    <input type="hidden" name="id" value="{{id}}">
                </div>

                <div class="form-group input-group">
                    <input type="text" name="token">
                </div>

                <div class="form-group input-group">
                    <button type="submit" class="btn btn-primary">CHECK OTP</button>
                </div>
            </form>
        </div>
    </div>
</section>

