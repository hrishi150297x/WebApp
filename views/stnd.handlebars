<section class="container-fluid main-content">
    <div class="col-sm-10" style="width: 600px; margin-left: 440px; margin-top: 100px;">
        <div class="jumbotron" style="background-color: #c8cac9;">
            <div class="form-group" style="margin-top: -50px;">
                <h1 style="margin-top: 10px; margin-left: 78px;">Standard Wise Result</h1>
            </div>
    
            <form method="POST" action="/stnd" class="form-horizontal" style="margin-left: 50px; margin-top: 20px;" >
                <div class="form-group input-group">
                    <input type="text" class="form-control" name="name" placeholder="Student Name" required>
                </div>

                <div class="form-group input-group">
                    <input type="date" class="form-control" name="date" placeholder="Date" required>
                </div>

                <div class="form-group input-group">
                    <select type="text" name="standard" class="form-control" placeholder="Standard">
                        <option value="1st">1st</option>
                        <option value="2nd">2nd</option>
                        <option value="3rd">3rd</option>
                        <option value="4th">4th</option>
                        <option value="5th">5th</option>
                        <option value="6th">6th</option>
                        <option value="7th">7th</option>
                        <option value="8th">8th</option>
                        <option value="9th">9th</option>
                        <option value="10th">10th</option>
                        <option value="11th">11th</option>
                        <option value="12th">12th</option> 				
				    </select>
                </div>

                <div class="form-group input-group">
                    <input type="number" class="form-control" name="marks" placeholder="Marks" required>
                </div>

                <div class="form-group input-group">
                    <input type="file" class="form-control" name="file" placeholder="Attach File" required>
                </div><br>
                
                <div class="form-group">
                    <button type="submit" class="btn btn-primary" style="margin-left: 135px;">SUBMIT</button>
                    <button type="reset" class="btn btn-primary">RESET</button>
                </div>
            </form>
        </div>  
    </div>
</section>