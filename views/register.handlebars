<section class="container-fluid main-content">


{{#if errors}}
        {{#each errors}}
            <div class="alert alert-danger">{{msg}}</div>
        {{/each}}
{{/if}}



  <div class="col-sm-10" style="width: 600px; margin-left: 440px; margin-top: 100px;">
    <div class="jumbotron" style="background-color: #c8cac9;">
      <div class="form-group" style="margin-top: -50px;">
        <i class="far fa-user-circle" style="font-size: 70px;margin: 20px 220px 0;"></i>
        <h1 style="margin-top: 10px; margin-left: 183px;">Register</h1>
      </div>
    
      <form method="POST" action="/users/register" class="form-horizontal" style="margin-left: 50px; margin-top: 20px;" >
        <div class="form-group input-group">
          <i class="fas fa-user" style="margin-left: -25px; margin-top: 11px;"></i>&nbsp;&nbsp;
          <input type="text" class="form-control" name="name" maxlength="50" placeholder="Full Name" required>
        </div>

        <div class="form-group input-group">
          <i class="fas fa-birthday-cake" style="margin-left: -25px; margin-top: 11px;"></i>&nbsp;&nbsp;
          <input type="date" class="form-control" name="birthdate" placeholder="Birthdate" required>
        </div>

        <div class="form-group input-group">
          <i class="fas fa-notes-medical" style="margin-left: -25px; margin-top: 11px;"></i>&nbsp;&nbsp;
          <input type="text" class="form-control" name="bloodgroup" placeholder="Blood Group" required>
        </div>

        <div class="form-group input-group">
          <i class="fas fa-envelope" style="margin-left: -25px; margin-top: 11px;"></i>&nbsp;&nbsp;
          <input type="email" class="form-control" name="email" placeholder="Email ID" required>
        </div>

        <div class="form-group input-group">
          <i class="fas fa-mobile-alt" style="margin-left: -25px; margin-top: 11px;"></i>&nbsp;&nbsp;
          <input type="tel" class="form-control" name="mobilenumber" placeholder="Mobile Number" required>
        </div>

        <div class="form-group input-group">
          <i class="fas fa-home" style="margin-left: -25px; margin-top: 11px;"></i>&nbsp;&nbsp;
          <textarea class="form-control" name="address" rows="3" cols="30" placeholder="Address" required></textarea>
        </div>

        <div class="form-group input-group">
          <i class="fas fa-school" style="margin-left: -25px; margin-top: 11px;"></i>&nbsp;&nbsp;
          <input type="text" class="form-control" name="schoolname" maxlength="50" placeholder="School Name" required>
        </div>

        <div class="form-group input-group">
          <i class="fas fa-school" style="margin-left: -25px; margin-top: 11px;"></i>&nbsp;&nbsp;
          <textarea class="form-control" name="schooladdress" rows="3" cols="30" placeholder="School Address" required></textarea>
        </div>

        <div class="form-group input-group">
          <i class="fas fa-book-reader" style="margin-left: -25px; margin-top: 11px;"></i>&nbsp;&nbsp;
          <input type="number" class="form-control" name="standard" placeholder="Current Standard" required>
        </div>
        
        <div class="form-group input-group">
          <i class="fas fa-user" style="margin-left: -25px; margin-top: 11px;"></i>&nbsp;&nbsp;
          <input type="text" class="form-control" name="username" placeholder="Username" required>
        </div>
        
        <div class="form-group input-group">
          <i class="fas fa-lock" style="margin-left: -25px; margin-top: 11px;"></i>&nbsp;&nbsp;
          <input type="password" class="form-control" name="password" placeholder="Password" required>
        </div>

        <div class="form-group input-group">
          <i class="fas fa-lock" style="margin-left: -25px; margin-top: 11px;"></i>&nbsp;&nbsp;
          <input type="password" class="form-control" name="confirmpassword" placeholder="Confirm Password" required>
        </div>

        <div class="form-group">
          <button type="reset" class="btn btn-primary" style="margin-left: 125px;">RESET</button>
          <button type="submit" class="btn btn-primary">SUBMIT</button>
        </div>
 
        <div class="form-group">
          <span class="remember"><a href="/users/signin" style="margin-left: 90px;">Already Have An Account? Sign In</a></span>
        </div>      
      </form>
    </div>  
  </div>
</section>