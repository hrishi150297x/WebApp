<section class="container-fluid main-content">
    <div class="col-sm-10" style="width: 600px; margin-left: 440px; margin-top: 100px;">
        <div class="jumbotron" style="background-color: #c8cac9;">
            <div class="form-group" style="margin-top: -50px;">
                <h1 style="margin-top: 10px; margin-left: 125px;">Upload Reports</h1>
            </div>
    
            <form method="POST" action="/admins/report" class="form-horizontal" style="margin-left: 50px; margin-top: 20px;" >
                <div class="form-group input-group">
                    <input type="number" class="form-control" name="srno" placeholder="Sr. No." required>
                </div>
                
                <div class="form-group input-group">
                    <input type="text" class="form-control" name="reportname" placeholder="Report Name" required>
                </div>

                <div class="form-group input-group">
                    <input type="date" class="form-control" name="date" required>
                </div>
                
                <div class="form-group input-group">
                    <input type="file" class="form-control" name="file" required>
                </div><br>
                
                <div class="form-group">
                    <button id="btn-add" class="btn btn-primary" style="margin-left: 135px;">SAVE</button>
                    <button type="reset" class="btn btn-primary">RESET</button>
                </div>
        </div>  
    </div>
		      
	<center>
		<table class="table table-dark">
  			<thead>
    			<tr>
					<th scope="col">Sr. No.</th>
					<th scope="col">Report Name</th>
					<th scope="col">Date</th>
					<th scope="col">File</th>
				</tr>
			</thead>
            <tbody>

            </tbody>
		</table>
	</center>
	</form>
</section>  

